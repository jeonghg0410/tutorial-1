<?xml version="1.0" encoding="UTF-8"?>
<project name="module_filemanager" default="compile.module.filemanager">
  <dirname property="module.filemanager.basedir" file="${ant.file.module_filemanager}"/>
  
  <property name="module.jdk.home.filemanager" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.filemanager" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.filemanager" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.filemanager" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="filemanager.output.dir" value="${module.filemanager.basedir}/out/production/FileManager"/>
  <property name="filemanager.testoutput.dir" value="${module.filemanager.basedir}/out/test/FileManager"/>
  
  <path id="filemanager.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="filemanager.module.production.classpath">
    <path refid="${module.jdk.classpath.filemanager}"/>
  </path>
  
  <path id="filemanager.runtime.production.module.classpath">
    <pathelement location="${filemanager.output.dir}"/>
  </path>
  
  <path id="filemanager.module.classpath">
    <path refid="${module.jdk.classpath.filemanager}"/>
    <pathelement location="${filemanager.output.dir}"/>
  </path>
  
  <path id="filemanager.runtime.module.classpath">
    <pathelement location="${filemanager.testoutput.dir}"/>
    <pathelement location="${filemanager.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.filemanager">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.filemanager">
    <patternset refid="excluded.from.module.filemanager"/>
  </patternset>
  
  <path id="filemanager.module.sourcepath">
    <dirset dir="${module.filemanager.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.filemanager" depends="compile.module.filemanager.production,compile.module.filemanager.tests" description="Compile module FileManager"/>
  
  <target name="compile.module.filemanager.production" depends="register.custom.compilers" description="Compile module FileManager; production classes">
    <mkdir dir="${filemanager.output.dir}"/>
    <javac2 destdir="${filemanager.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.filemanager}/javac">
      <compilerarg line="${compiler.args.filemanager}"/>
      <bootclasspath refid="filemanager.module.bootclasspath"/>
      <classpath refid="filemanager.module.production.classpath"/>
      <src refid="filemanager.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.filemanager"/>
    </javac2>
    
    <copy todir="${filemanager.output.dir}">
      <fileset dir="${module.filemanager.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.filemanager.tests" depends="register.custom.compilers,compile.module.filemanager.production" description="compile module FileManager; test classes" unless="skip.tests"/>
  
  <target name="clean.module.filemanager" description="cleanup module">
    <delete dir="${filemanager.output.dir}"/>
    <delete dir="${filemanager.testoutput.dir}"/>
  </target>
</project>